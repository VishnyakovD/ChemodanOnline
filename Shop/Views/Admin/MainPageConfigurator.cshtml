@model Shop.Models.MainPageModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Page.Title = "Настройка главной страницы";
}


<div>

    <div class="panel panel-default">
        <div class="panel-heading panel-head-color">
            <span class="btn btn-sm js-show-info-block-item" data-id="-1" data-type="0">Добавить</span>
        </div>
        <div class="panel-body panel-body-color">
            <div class="js-carusel-item">

            </div>
        </div>
    </div>
    <div class="swiper-container main-page-swipe js-main-page-swiper">
     
        <div class="swiper-wrapper">
            @foreach(var item in Model.ListCaruselItem)
            {

                <div class="swiper-slide">
                    <div>
                        <span class="btn btn-edit btn-sm js-show-info-block-item" data-id="@item.id" data-type="0">Изменить</span>
                        <img src="@ImagePathForView.GetPath()@item.Image"/>
                        <a href="@item.Link">@item.Title</a>
                    </div>
                </div>
            }
           
  
        </div>
   
        @*<div class="swiper-pagination"></div>
       <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
        <div class="swiper-scrollbar"></div>*@
    </div>

    <div class="row">
        <div class="col-ms-12">
            <h1 class="head-text">@Model.Title</h1>
        </div>
    </div>
    

    <div class="panel panel-default">
        <div class="panel-heading panel-head-color">
            <span class="btn btn-sm js-show-info-block-item" data-id="-1" data-type="1">Добавить</span>
        </div>
        <div class="panel-body panel-body-color">
            <div class="js-info-block-item">

            </div>
        </div>
    </div>

    <div class="row info-category">
        @foreach (var item in Model.ListBlockInfo)
        {


            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">

                <span class="btn btn-edit btn-sm js-show-info-block-item" data-id="@item.id" data-type="1">Изменить</span>
                <div class="item">
                    <div class="left-block">
                        <div class="title">
                            <a href="@item.Link">@item.Title</a>
                        </div>
                        <div class="name">
                            <span>@item.name</span>
                        </div>

                        <div class="description">
                            <span>@item.Description</span>
                        </div>

                        <div class="button">
                            <a class="btn btn-info-block pull-right" href="@item.Link">Выбрать</a>
                        </div>

                    </div>
                    <div class="right-block">
                        <img src="@ImagePathForView.GetPath()@item.Image"/>
                    </div>
                </div>



            </div>

        }
    </div>

    <div class="row">
        <div class="col-ms-12">
            <h1 class="title-product-swiper">@Model.TitleProduct</h1>
        </div>
    </div>

    <div class="swiper-container main-page-favorite-swipe js-main-page-favorite-swiper">

        <div class="swiper-wrapper">
            @foreach (var item in Model.ListProduct)
            {
                <div class="swiper-slide">
                    <div class="short-product carusel">
                        <div class="line1">
                            <img src="@item.smalPhotoPath"/>
                        </div>

                        <div class="line2">
                            <span class="art">арт. @item.articul</span>
                            <span class="price">@item.price.ToString("#### грн.")</span>
                        </div>

                        <div class="line3">
                            <a href="@Url.Action("SkuInfo", "Home", new {idSku = item.id})" class="btn btn-info-block">Посмотреть</a>
                        </div>
                    </div>
                </div>
                    }


                </div>

        @*<div class="swiper-pagination"></div>
    <div class="swiper-button-prev"></div>
     <div class="swiper-button-next"></div>
             <div class="swiper-scrollbar"></div>*@
    </div>


</div>