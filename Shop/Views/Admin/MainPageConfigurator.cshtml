@model Shop.Models.MainPageModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Page.Title = "Настройка главной страницы";
}


<div>

    <div class="panel panel-default">
        <div class="panel-heading panel-head-color">
            <span class="btn btn-sm js-show-info-block-item" data-id="-1" data-type="0">Добавить</span>
        </div>
        <div class="panel-body panel-body-color">
            <div class="js-carusel-item">

            </div>
        </div>
    </div>

    <div class="swiper-container main-page-swipe js-main-page-swiper hidden-xs">

        <div class="swiper-wrapper">
            @foreach (var item in Model.ListCaruselItem)
            {
                <div class="swiper-slide">
                    <div>
                        <span class="btn btn-edit btn-sm js-show-info-block-item" data-id="@item.id" data-type="0">Изменить</span>
                        <img src="@ImagePathForView.GetPath()@item.Image" />
                        @*<a href="@item.Link">@item.Title</a>*@
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-ms-12">
            <div class="text-center">
                <div class="title-main-page">@Model.Title</div>
            </div>
            <div class="hr-title"></div>
        </div>
    </div>


    <div class="panel panel-default">
        <div class="panel-heading panel-head-color">
            <span class="btn btn-sm js-show-info-block-item" data-id="-1" data-type="1">Добавить</span>
        </div>
        <div class="panel-body panel-body-color">
            <div class="js-info-block-item">

            </div>
        </div>
    </div>

    <div class="row info-category">

        @*@foreach (var item in Model.ListBlockInfo)
            {*@
        @if (Model.ListBlockInfo.Any())
        {
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <div class="item">
                    <span class="btn btn-edit btn-sm js-show-info-block-item" data-id="@Model.ListBlockInfo[0].id" data-type="1">Изменить</span>
                    <div class="text-block pull-right">
                        <div class="title">
                            <a href="@Model.ListBlockInfo[0].Link">@Model.ListBlockInfo[0].Title</a>
                        </div>
                        <div class="name">
                            <img src="~/Content/img/icons/size.png"/><span>@Model.ListBlockInfo[0].name</span>
                        </div>

                        <div class="description">
                            <span>@Model.ListBlockInfo[0].Description</span>
                        </div>

                        <div class="button">
                            <a class="btn" href="@Model.ListBlockInfo[0].Link">Выбрать</a>
                        </div>

                    </div>
                    <div class="img-block pull-right">
                        <img src="@ImagePathForView.GetPath()@Model.ListBlockInfo[0].Image"/>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <div class="item">
                    <span class="btn btn-edit btn-sm js-show-info-block-item" data-id="@Model.ListBlockInfo[1].id" data-type="1">Изменить</span>
                    <div class="text-block pull-left">
                        <div class="title">
                            <a href="@Model.ListBlockInfo[1].Link">@Model.ListBlockInfo[1].Title</a>
                        </div>
                        <div class="name">
                            <img src="~/Content/img/icons/size.png"/><span>@Model.ListBlockInfo[1].name</span>
                        </div>

                        <div class="description">
                            <span>@Model.ListBlockInfo[1].Description</span>
                        </div>

                        <div class="button">
                            <a class="btn" href="@Model.ListBlockInfo[1].Link">Выбрать</a>
                        </div>

                    </div>
                    <div class="img-block pull-left">
                        <img src="@ImagePathForView.GetPath()@Model.ListBlockInfo[1].Image"/>
                    </div>
                </div>
            </div>
            @*}*@
        }
    </div>


    <div class="row">
        <div class="col-ms-12">
            <div class="text-center">
                <div class="title-main-page">@Model.TitleProduct</div>
            </div>
            <div class="hr-title"></div>
        </div>
    </div>

    <div class="swiper-container main-page-favorite-swipe js-main-page-favorite-swiper">

        <div class="swiper-wrapper">
            @foreach (var item in Model.ListProduct)
            {
                <div class="swiper-slide">
                    <div class="short-product">
                        <div class="line1">
                            <img src="@item.smalPhotoPath" />
                        </div>
                        <div class="line2">
                            <span class="txt">артикул </span>
                            <span class="val">@item.articul</span>
                        </div>
                        <div class="line3">
                            <span class="val">@item.category</span>
                        </div>
                        <div class="line4">
                            <span class="txt">прокат </span>
                            <span class="price">@item.price.ToString("####")</span>
                            <span class="val">грн/день</span>
                        </div>
                        <div class="line5">
                            <a href="@Url.Action("SkuInfo", "Home", new {idSku = item.id})" class="button-default">Посмотреть</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>

</div>