@using Shop.Models
@model List<Shop.Models.BrandModel>

<h4>
    Список брендов
    <span class="btn btn-blue btn-sm" onclick="showCatData('@Url.Action("ShowBrand", "Admin", new { idBrand = -1 })')">Добавить</span>
</h4> 
@if(Model!=null&&Model.Any())
{ 
    <table class="table table-bordered table-condensed">
        <tr>
            <th>ид</th>
            <th>Название</th>
            <th style="width: 20%"></th>
        </tr>
        @foreach (var brand in Model)
        {
          <tr>
            <td>@brand.id</td>
            <td>@brand.name</td>
            <td><span class="btn btn-blue btn-sm" onclick="showCatData('@Url.Action("ShowBrand", "Admin", new { idBrand = brand.id })')">Изменить</span></td>
        </tr>
        }
      
    </table>
}
else
{
  <p>нет данных</p> 
}
