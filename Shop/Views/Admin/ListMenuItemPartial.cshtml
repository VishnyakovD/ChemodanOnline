@using Shop.Models
@model List<Shop.db.Entities.MenuItem>




<h4>
    Список пунктов меню
    <span class="btn btn-blue btn-sm" onclick="showCatData('@Url.Action("ShowMenuItem", "Admin", new { idMenuItem = -1 })')">Добавить</span>
</h4>  
@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-condensed">
        <tr>
            <th>ид</th>
            <th>Название</th>
            <th>Тип</th>
            <th>Приоритет</th>
            <th>Путь</th>
            <th style="width: 20%"></th>

        </tr>
        @foreach (var specs in Model)
        {
            <tr>
                <td>@specs.id</td>
                <td>@specs.name</td>
                <td>@specs.type</td>
                <td>@specs.sortPriority</td>
                <td><a href="@specs.path" target="_blank">@specs.path</a></td>
                <td>
                    <span class="btn btn-blue btn-sm" onclick="showCatData('@Url.Action("ShowMenuItem", "Admin", new { idMenuItem = specs.id })')">Изменить</span>
                    @Ajax.ActionLink("Удалить", "RemoveMenuItem", "Admin", new { idMenuItem = specs.id }, new AjaxOptions { UpdateTargetId = "ServerMessage" },new{@class="pull-right"})
                </td>
            </tr>
        }

    </table>
}
else
{
        <p>нет данных</p>
 }
