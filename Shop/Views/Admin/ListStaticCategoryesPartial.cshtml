@using Shop.Models
@model List<Shop.db.Entities.StaticCategory>



    <h4>Список категорий 
        <span class="btn btn-blue btn-sm" onclick="showCatData('@Url.Action("ShowStaticCategory", "Admin", new { idCat = -1 })')">Добавить</span>
    </h4>
@if(Model!=null&&Model.Any())
{ 
     <table class="table table-bordered table-condensed">
        <tr>
            <th>ид</th>
            <th>Название</th>
            <th style="width: 20%"></th>
        </tr>
        @foreach (var category in Model)
        {
          <tr>
            <td>@category.id</td>
            <td>@category.name</td>
            <td><span class="btn btn-blue btn-sm" onclick="showCatData('@Url.Action("ShowStaticCategory", "Admin", new { idCat = category.id })')">Изменить</span></td>
        </tr>
        }
      
    </table>


    }
    else
    {
      <p>нет данных</p> 
    }
