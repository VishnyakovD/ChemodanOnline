@using Shop.Models
@model List<Shop.db.Entities.ChemodanType>


<h4>
    Типы чемоданов
    <span class="btn btn-blue btn-sm" onclick="showCatData('@Url.Action("ShowChemodanType", "Admin", new { id = -1 })')">Добавить</span>
</h4>  
@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-condensed">
        <tr>
            <th>ид</th>
            <th>Название</th>
            @*<th>Приоритет</th>*@
            <th>Цена/день</th>
            <th>Использовать</th>
            <th style="width: 20%"></th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                @*<td>@item.sortPriority</td>*@
                <td>@item.priceDay.ToString("####")</td>
                <td>@item.isUse</td>
                <td>
                    <span class="btn btn-blue btn-sm" onclick="showCatData('@Url.Action("ShowChemodanType", "Admin", new { id = item.id })')">Изменить</span>
                </td>
            </tr>
        }

    </table>
}
else
{
        <p>нет данных</p>
 }
