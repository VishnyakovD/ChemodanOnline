@model Shop.db.Entities.MenuItem

@using (Ajax.BeginForm("AddOrUpdateMenuItem", "Admin", new AjaxOptions { UpdateTargetId = "ServerMessage" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
     
            if (Model != null && Model.id > 0)
            {
                <input type="hidden" id="id" name="id" value="@Model.id" />
            }
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3">
                        <label>Название</label>
                        @Html.TextBoxFor(model => model.name, new { @class = "form-control", @required = "" })
                        @Html.ValidationMessageFor(model => model.name)
                    </div>
                    <div class="col-md-2">
                        <label>Тип</label>
                        @Html.TextBoxFor(model => model.type, new { @class = "form-control", @required = "", @type = "number" })
                        @Html.ValidationMessageFor(model => model.type)
                    </div>
                    <div class="col-md-2">
                        <label>Приоритет</label>
                        @Html.TextBoxFor(model => model.sortPriority, new { @class = "form-control", @required = "", @type = "number" })
                        @Html.ValidationMessageFor(model => model.sortPriority)
                    </div>
                    <div class="col-md-5">
                        <label>Путь</label>
                        @Html.TextBoxFor(model => model.path, new { @class = "form-control", @required = "" })
                        @Html.ValidationMessageFor(model => model.path)
                    </div>
                </div>
                <input onclick="clickModalSubmit(this)" class="btn btn-blue pull-right" type="submit" value="Сохранить" />
            </div>



}