@model Shop.Models.AdminSkuModel

@{
    var path = ImagePathForView.GetPath();
}

@if (Model != null)
{
    <div class="col-xs-12 col-sm-4 col-md-3 col-lg-3">
        <div class="short-product list-item">
            <div class="line1">
                <img src="@Model.SmalPhotoPath" />
            </div>
            <div class="line3">
                <span class="val">@Model.Name</span>
            </div>

            @foreach (var code in Model.Codes)
            {
                <div class="line3">
                    <span class="val">@code.Code - @code.Name</span>
                </div>
            }


            <div class="line5">
                <a href="@Url.Action("SkuData", "Admin", new {id = Model.Id})" class="button-info">Редактировать</a>
            </div>
        </div>
    </div>
}