@using Shop.Models
@model List<Shop.db.Entities.StaticSpecification>


<h4>
    Список характеристик
    <span class="btn btn-blue btn-sm" onclick="showCatData('@Url.Action("ShowSpec", "Admin", new { idSpec = -1 })')">Добавить</span>
</h4> 
@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-condensed">
        <tr>
            <th>ид</th>
            <th>Название</th>
            <th>Приоритет сортировки</th>
            <th style="width: 20%"></th>
        </tr>
        @foreach (var specs in Model)
        {
            <tr>
                <td>@specs.id</td>
                <td>@specs.name</td>
                <td>@specs.sortPriority</td>
                <td><span class="btn btn-blue btn-sm" onclick="showCatData('@Url.Action("ShowSpec", "Admin", new { idSpec = specs.id})')">Изменить</span></td>
            </tr>
        }
    </table>
}
else
{
        <p>нет данных</p>
}
