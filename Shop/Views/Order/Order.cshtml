@using System.Globalization
@using Shop.Models
@using AdvancedClasses
@using Shop.db.Entities
@model OrderClientPage
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Model != null)
    {
        Page.Title = "Аренда чемоданов | Chemodan.online";
        @section head {
            <meta name="description" content="@Model.Description">
            <meta name="keywords" content="@Model.Keywords">
        }
    }
}
<div class="js-order-page1">

    <div class="row">
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-6">
                    Товар
                </div>
                <div class="col-md-2">
                    Количество
                </div>
                <div class="col-md-2">
                    Цена аренды
                </div>
                <div class="col-md-2">
                    Стоимость
                </div>
            </div>

            @foreach (var item in Model.Order.Products)
            {
                <div class="row">
                    <div class="col-md-6">
                        <div>
                            <div>
                                <img src="@item.smalPhotoPath"/>
                            </div>
                            <div>
                                <span>@item.name</span>
                                <span>Артикул @item.articul</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="js-control-count">
                            <span class="js-removecart" data-id="@item.id" data-price="@item.price.ToString("F2", CultureInfo.InvariantCulture)">-</span>
                            <span class="js-count-item" data-id="@item.id">0</span>
                            <span class="js-addcart" data-id="@item.id" data-price="@item.price.ToString("F2", CultureInfo.InvariantCulture)" data-max="@item.maxCount">+</span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <span>@item.price.ToString("F2", CultureInfo.InvariantCulture)</span>
                    </div>
                    <div class="col-md-2">
                        <span class="js-summ-item" data-id="@item.id">0</span>
                        <span>    X</span>
                    </div>
                </div>
            }


        </div>

        <div class="col-md-4">

            <div class="row">
                <div class="col-md-12">Период бронирования</div>
            </div>
            <div class="row">
                <div class="col-md-12">Выбор даты</div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <span>29.12.2017 - 15.01.2018</span>
                </div>
            
            </div>

            <div class="row">
                <div class="col-md-12">
                  Сумма в корзине
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <span>К оплате:</span>
                </div>
                <div class="col-md-6">
                    <div class="order-summ">
                        <span class="js-order-summ">0</span> грн.
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <span>Оформить заказ--></span>
                </div>

            </div>

        </div>

    </div>

</div>


<div class="js-order-page2">
    <div class="row">
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-12">Контактные данные</div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label>Фамилия</label>
                    <input class="form-control" type="text" name="ClientLastName" value="@Model.Order.ClientLastName" />
                </div>
                <div class="col-md-6">
                    <label>Имя</label>
                    <input class="form-control" type="text" name="ClientFirstName" value="@Model.Order.ClientFirstName" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label>Email</label>
                    <input class="form-control" type="text" name="ClientEmail" value="@Model.Order.ClientEmail" />
                </div>
                <div class="col-md-6">
                    <label>Телефон</label>
                    <input class="form-control" type="text" name="ClientPhone" value="@Model.Order.ClientPhone" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">Адрес доставки</div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label>Город</label>
                    <input class="form-control" type="text" name="City" value="@Model.Order.City" />
                </div>
                <div class="col-md-6">
                    <label>Дом</label>
                    <input class="form-control" type="text" name="Home" value="@Model.Order.Home" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label>Тип улицы</label>
                    <select class="form-control" name="@Model.Order.TypeStreet">
                        @foreach (var item in TypesStreet.Types)
                        {
                            <option value="@item">@item</option>
                        }
                    </select>
                </div>
                <div class="col-md-6">
                    <label>Этаж</label>
                    <input class="form-control" type="text" name="Level" value="@Model.Order.Level" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label>Улица</label>
                    <input class="form-control" type="text" name="Street" value="@Model.Order.Street" />
                </div>
                <div class="col-md-6">
                    <label>Квартира</label>
                    <input class="form-control" type="text" name="Flat" value="@Model.Order.Flat" />
                </div>
            </div>
        </div>

        <div class="col-md-4">

            <div class="row">
                <div class="col-md-12">Ваш заказ</div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <span>Доставка</span>
                </div>
                <div class="col-md-6">
                    <div class="radio-btns js-delivery-types">
                        @{var selected = "selected";}
                        @foreach (var delType in Model.DeliveryTypes)
                        {
                            <div class="@selected js-set-ratio js-delivery-type" data-id="@delType.Id">
                                <span class="r1"><span class="r2"></span></span> @delType.Name
                            </div>
                            selected = "";
                        }
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <span>Доставка</span>
                </div>
                <div class="col-md-6">
                    <div class="radio-btns js-radio-btns">
                        @{selected = "selected";}
                        @foreach (var delType in Model.PaymentTypes)
                        {
                            <div class="@selected js-set-ratio js-payment-type" data-id="@delType.Id">
                                <span class="r1"><span class="r2"></span></span> @delType.Name
                            </div>
                            selected = "";
                        }
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <span>К оплате:</span>
                </div>
                <div class="col-md-6">
                    <div class="order-summ">
                        <span class="js-order-summ">0</span> грн.
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <span>Подтвердить заказ--></span>
                </div>

            </div>

        </div>

    </div>
</div>



