@if (Model != null)
{
    <div class="product-card">
        <div class="row hidden-xs hidden-sm">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="breadcrumbs">
                    <a href="/">Главная</a>
                    <span>></span>
                    <a href="/Home/ListSkuOnCategory?idCat=10010">Чемоданы</a>
                    <span>></span>
                    <a href="/Home/SkuInfo?idSku=@Model.id">@Model.name</a>
                </div>
            </div>
        </div>

        <div class="row hidden-xs hidden-sm">
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
      
            </div>
            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                <div class="title text-left">@Model.name</div>
            </div>

        </div>

        <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                @if (Model.listPhoto != null && Model.listPhoto.Any())
                {
                    <div class="swiper-container card-page-swipe js-card-page-swiper">

                        <div class="swiper-wrapper">
                            @foreach (var item in Model.listPhoto)
                            {
                                <div class="swiper-slide">
                                    <div>
                                        <img src="@item.path"/>

                                    </div>
                                </div>
                            }
                        </div>
                        <div class="swiper-button-prev"></div>
                        <div class="swiper-button-next"></div>
                    </div>
                }
                else
                {
                    <img class="col-md-12" src="@Model.smalPhotoPath"/>
                }


                @{Html.RenderPartial("PayOneClickPartial", new PayOneClickModel("full-width hidden-xs hidden-lg hidden-md", Model.id, ""));}

            </div>
            <div class="col-xs-12 col-sm-8 col-md-4 col-lg-4">
                <div class="title tablet text-left hidden-lg hidden-md">@Model.name</div>
                <div class="art">артикул @Model.articul</div>
                <div class="prices">
                    <div class="line1">
                        <span class="price-value">@Model.chemodanPriceDay.ToString("F2", CultureInfo.InvariantCulture)</span>
                        <span class="price-curency">грн.</span>
                        <span class="dotted"></span>
                        <span class="text">Прокат в день</span>
                    </div>

                    <div class="line2">
                        <span class="price-value">@Model.price.ToString("F2", CultureInfo.InvariantCulture) грн.</span>
                        <span class="dotted"></span>
                        <span class="text">Залоговая сумма</span>
                    </div>

                </div>


                <div class="js-tabs-block">
                    <div class="product-tabs">
                        <div class="tab js-product-tab-title active" data-id="1">
                            <span>Характеристики</span>
                        </div>
                        <div class="tab js-product-tab-title" data-id="2">
                            <span>Описание</span>
                        </div>
                    </div>
                    <div class="product-tabs-content js-product-tabs">
                        <div class="js-product-tab-content" data-id="1">
                            @foreach (var spec in Model.listSpecification)
                        {
                                <div class="spec-item">
                                    <span class="rect"></span>
                                    <span class="spec-text">@spec.staticspec.name</span>
                                    <span class="dotted"></span>
                                    <span class="spec-value">@spec.value</span>
                                </div>
                        }
                        </div>
                        <div class="js-product-tab-content hide" data-id="2">
                            @(new HtmlString(Model.description))


                            @if (!string.IsNullOrEmpty(Model.care))
                        {

                                <div>@(new HtmlString(Model.care))</div>
                        }
                        </div>
                    </div>
                </div>


                <div class="button-info blue js-addcart" data-id="@Model.id" data-price="@Model.chemodanPriceDay.ToString("F2", CultureInfo.InvariantCulture)" data-max="@Model.maxCount" data-zalog="@Model.price.ToString("F2", CultureInfo.InvariantCulture)">Добавить в корзину</div>

            </div>
            <div class="col-xs-4 col-md-4 col-lg-4 hidden-xs hidden-sm">
                <div class="product-info-block">
                    <div class="line1">Самовывоз</div>
                    <div class="line2">
                        <a href="/s/cnt/" target="_blank">
                            <img src="~/Content/img/icons/loc.png"/><span>г. Киев, пр. Победы, 67, корпус “I”, этаж 2, офис 213</span>
                        </a>
                    </div>
                </div>

                <div class="product-info-block">
                    <div class="line1">Гарантия гигиены</div>
                    <div class="line2">
                        <a href="/s/faq/#panellink3" target="_blank">
                            <img src="~/Content/img/icons/assistant.png"/><span>Прочитайте про гигиену чемоданов</span>
                        </a>
                    </div>
                </div>

                @{Html.RenderPartial("PayOneClickPartial", new PayOneClickModel("",Model.id,""));}

            </div>
        </div>

        <div class="row hidden-md hidden-lg">
            <div class="col-xs-12 col-sm-6">
                <div class="product-info-block">
                    <div class="line1">Самовывоз</div>
                    <div class="line2">
                        <a href="/s/cnt/" target="_blank">
                            <img src="~/Content/img/icons/loc.png" /><span>г. Киев, пр. Победы, 67, корпус “I”, этаж 2, офис 213</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6">
                <div class="product-info-block">
                    <div class="line1">Гарантия гигиены</div>
                    <div class="line2">
                        <a href="/s/faq/#panellink3" target="_blank">
                            <img src="~/Content/img/icons/assistant.png" /><span>Прочитайте про гигиену чемоданов</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-ms-12">
                <div class="text-center">
                    <div class="title-main-page">@Model.TitleProduct</div>
                </div>
                <div class="hr-title"></div>
            </div>
        </div>

        @{Html.RenderPartial("FavoriteProductsPartial",Model.ListProduct);}

    </div>
}


