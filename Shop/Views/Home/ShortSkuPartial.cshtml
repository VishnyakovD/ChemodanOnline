@model Shop.Models.ShortSKUModel
@{
    var path = ImagePathForView.GetPath();
}

@if (Model != null)
{
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
        <div class="short-product list-item js-link" href="@Url.Action("SkuInfo", "Home", new {idSku = Model.id})">
            <div class="line1">
                <img src="@Model.smalPhotoPath" />
            </div>
            <div class="line2">
                <span class="txt">артикул </span>
                <span class="val">@Model.articul</span>
            </div>
            <div class="line3">
                <span class="val">@Model.category</span>
            </div>
            <div class="line4">
                @*<span class="txt">в день:</span>*@
                <span class="price">@Model.price.ToString("####")</span>
                <span class="val">грн/день</span>
            </div>
            <div class="line5">
                <a href="@Url.Action("SkuInfo", "Home", new {idSku = Model.id})" class="button-info">Посмотреть</a>
            </div>
        </div>
    </div>
}