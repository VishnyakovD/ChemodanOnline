@model Shop.Models.MainPageModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Page.Title = "Аренда чемоданов | Chemodan.online";

    var path = ImagePathForView.GetPath();
}

<div>
    <div class="swiper-container main-page-swipe js-main-page-swiper">

        <div class="swiper-wrapper">
            @foreach (var item in Model.ListCaruselItem)
            {
                <div class="swiper-slide">
                    <div>
                        <img src="@path@item.Image" />
                        @*<a href="@item.Link">@item.Title</a>*@
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-ms-12">
            <div class="text-center">
                <div class="title-main-page">@Model.Title</div>
            </div>
            <div class="hr-title"></div>
        </div>
    </div>

    <div class="row info-category">
        @foreach (var item in Model.ListBlockInfo)
        {

            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <div class="item">
                    <div class="text-block">
                        <div class="title">
                            <a href="@item.Link">@item.Title</a>
                        </div>
                        <div class="name">
                            <img src="~/Content/img/icons/size.png" /><span>@item.name</span>
                        </div>

                        <div class="description">
                            <span>@item.Description</span>
                        </div>

                        <div class="button">
                            <a class="btn" href="@item.Link">Выбрать</a>
                        </div>

                    </div>
                    <div class="img-block">
                        <img src="@path@item.Image" />
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row">
        <div class="col-ms-12">
            <h1 class="title-product-swiper">@Model.TitleProduct</h1>
        </div>
    </div>

    <div class="swiper-container main-page-favorite-swipe js-main-page-favorite-swiper">

        <div class="swiper-wrapper">
            @foreach (var item in Model.ListProduct)
            {
                <div class="swiper-slide">
                    <div class="short-product carusel">
                        <div class="line1">
                            <img src="@item.smalPhotoPath" />
                        </div>

                        <div class="line2">
                            <span class="art">арт. @item.articul</span>
                            <span class="price">@item.price.ToString("#### грн.")</span>
                        </div>

                        <div class="line3">
                            <a href="@Url.Action("SkuInfo", "Home", new {idSku = item.id})" class="btn btn-info-block">Посмотреть</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>


</div>