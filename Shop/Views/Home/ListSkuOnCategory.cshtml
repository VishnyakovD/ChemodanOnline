@using Shop.Models
@using AdvancedClasses
@model SkuViewerModel
@{
    if (Model != null)
    {
        Page.Title = "Аренда чемоданов | Chemodan.online";

        @section head {
            <meta name="description" content="@Model.Description">
            <meta name="keywords" content="@Model.Keywords">
        }
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model != null)
{

    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="text-left">
                <div class="title-main-page">@Model.TitleProduct</div>
            </div>
            <div class="hr-title"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
            <div class="title-filter">Фильтр</div>
        </div>
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
            <div class="selected-filters js-selected-filters">
                <span class="js-filter-clear">очистить</span>
            </div>
        </div>
     </div>

<div class="row">
    <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
        @if (Model.Filters != null)
        {
            <input type="hidden" class="js-filter-cat" value="@Model.IdCat">
           Html.RenderPartial("~/Views/Home/FiltersPartial.cshtml", Model.Filters); 
        }

    </div>

    <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
        <div class="row js-list-products">
            @if (Model.skuList.AnySafe())
            {
                Html.RenderPartial("~/Views/Home/ShortProductListPartial.cshtml", Model.skuList);
            }
        </div>
    </div>
</div>









     <div class="row">
       <div class="col-md-12">@(new HtmlString(Model.bodyText))</div>
    </div>
}
