@using System.Web.Optimization
@model Shop.Models.MenuModel
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>@Page.Title</title>
        @RenderSection("head", required: false)
        <link href="@Styles.Url("~/Content/jquery-ui/jquery-ui.min.css")" rel="stylesheet" />
        <link href="@Styles.Url("~/Content/css/bootstrap.min.css")" rel="stylesheet" />
        <link href="@Styles.Url("~/Content/jHtmlArea/jHtmlArea.css")" rel="stylesheet" />
        <link href="@Styles.Url("~/Content/css/styles.css")" rel="stylesheet" />
        
        

        <link href="~/Content/css/swiper.min.css" rel="stylesheet" />
        <link href="@Styles.Url("~/Content/css/main.min.css")" rel="stylesheet" />
    </head>
    <body>

        <div class="container">
            <div class="row">
                <div class="col-md-12">
                        @{ Html.RenderPartial("MenuPartial", Model); }
                </div>
                    
                 
            </div>
        </div>



        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    @RenderBody()
                </div>
            </div>
        </div>

        @{Html.RenderPartial("footerPartial");}

    <div id="DialogDataEdit">
        <div id="DialogDataEditBody">
        </div>
    </div>

    <div style="display: none" id="ServerMessage"></div>
    <div class="message js-message" style="display: none"></div>

    <script src="@Scripts.Url("~/Scripts/jquery-2.1.3.min.js")" type="text/javascript"></script>
        <script src="@Scripts.Url("~/Content/jquery-ui/jquery-ui.min.js")"></script>
        <script src="@Scripts.Url("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
        <script src="@Scripts.Url("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Scripts.Url("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
        <script src="@Scripts.Url("~/Scripts/jquery.cookie-1.4.1.min.js")" type="text/javascript"></script>

        <script src="@Scripts.Url("~/Content/js/bootstrap.min.js")"></script>
        <script src="@Scripts.Url("~/Content/js/scripts.js")"></script>
        <script src="@Scripts.Url("~/Content/js/event-handlers.js")"></script>
        <!--[if lt IE 9]>
        <script src="@Scripts.Url("~/Content/js/html5shiv.js")"></script>
        <script src="@Scripts.Url("~/Content/js/respond.min.js")"></script>
        <![endif]-->


    <script src="~/Scripts/swiper.jquery.min.js"></script>
    <script src="~/Scripts/ts/swiper.js"></script>
    <script src="@Scripts.Url("~/Scripts/ts/menu.js")" type="text/javascript"></script>
    <script src="@Scripts.Url("~/Scripts/ts/main-page.js")" type="text/javascript"></script>
    <script src="@Scripts.Url("~/Scripts/ts/filters.js")" type="text/javascript"></script>
    <script src="@Scripts.Url("~/Scripts/ts/cart.js")" type="text/javascript"></script>
    <script src="@Scripts.Url("~/Scripts/ts/controls.js")" type="text/javascript"></script>
    <script src="@Scripts.Url("~/Scripts/ts/message.js")" type="text/javascript"></script>
</body>
</html>
