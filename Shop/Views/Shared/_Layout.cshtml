@using System.Web.Optimization
@model Shop.Models.MenuModel
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>@Page.Title</title>
        @RenderSection("head", required: false)
        <link href="@Styles.Url("~/Content/jquery-ui/jquery-ui.min.css")" rel="stylesheet" />
        <link href="@Styles.Url("~/Content/css/bootstrap.min.css")" rel="stylesheet" />
        <link href="@Styles.Url("~/Content/jHtmlArea/jHtmlArea.css")" rel="stylesheet" />
        <link href="@Styles.Url("~/Content/css/styles.css")" rel="stylesheet" />
        
        
        <script src="@Scripts.Url("~/Scripts/jquery-2.1.3.min.js")" type="text/javascript"></script>
        <script src="@Scripts.Url("~/Scripts/jHtmlArea-0.8.js")" type="text/javascript"></script>

    </head>
    <body>
        @{
            ViewBag.isHideLeftMenu = true;
        }

        <div class="container container-nopadding">
            <div class="row">
                <div class="col-md-4">
                    <div id="logo">
                        <a href="/" title="Интернет-магазин Newer"><img src="~/Content/img/logo.jpg" alt="Интернет-магазин Newer"></a>
                    </div>
                </div>
                <div class="col-md-8">
                    <span class="social-icons pull-right">
                        <a href="https://www.facebook.com/newer.ua/" target="_blank">
                            <img src="~/Content/img/icons/facebook_online_social_media.png" />
                        </a>
                        <a href="https://vk.com/newer_ua" target="_blank">
                            <img src="~/Content/img/icons/vkontakte_social_media.png" />
                        </a>
                        @*<a href="/" target="_blank">
                            <img src="~/Content/img/icons/pinterest_online_social_media.png" />
                        </a>*@
                        <a href="https://www.instagram.com/newer_dress/" target="_blank">
                            <img src="~/Content/img/icons/instagram_online_social_media.png" />
                        </a>
                    </span>
                   
                </div>
            </div>
        </div>

        @{ Html.RenderPartial("MenuPartial", Model); }

        <div class="container container-nopadding">
            <div class="row">
                @{
                    var sizeColumt = "9";
                    if (ViewBag.isHideLeftMenu != null && ViewBag.isHideLeftMenu)
                    {
                        sizeColumt = "12";
                    }
                }

                @if (sizeColumt == "9")
                {
                    <div class="col-md-3">
                        @{ Html.RenderPartial("VerticalMenuPartial", Model); }
                    </div>
                }

                <div class="col-md-@sizeColumt">
                    @if (ViewBag.isHomePage != null && ViewBag.isHomePage == true)
                    {
                        Html.RenderPartial("BigCaruselPartial");
                    }

                    <div class="row">
                        <div class="col-lg-12">
                            <h1>@ViewBag.Title</h1>
                        </div>
                    </div>
                    @RenderBody()
                </div>
            </div>
        </div>

        @{Html.RenderPartial("footerPartial");}
        
        <div id="DialogDataEdit">
            <div id="DialogDataEditBody">
            </div>
        </div>
        
        <div @*class="hidden" id="fbcomments" style="display: none; position: absolute;bottom: -9999999px"*@>
          
        </div>
        <script src="@Scripts.Url("~/Content/jquery-ui/jquery-ui.min.js")"></script>
        <script src="@Scripts.Url("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
        <script src="@Scripts.Url("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
        <script src="@Scripts.Url("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

        <script src="@Scripts.Url("~/Content/js/bootstrap.min.js")"></script>
        <script src="@Scripts.Url("~/Content/js/scripts.js")"></script>
        <script src="@Scripts.Url("~/Content/js/event-handlers.js")"></script>
        <!--[if lt IE 9]>
        <script src="@Scripts.Url("~/Content/js/html5shiv.js")"></script>
        <script src="@Scripts.Url("~/Content/js/respond.min.js")"></script>
        <![endif]-->

        <script id="dsq-count-scr" src="//newer-ua.disqus.com/count.js" async></script>
</body>
</html>
