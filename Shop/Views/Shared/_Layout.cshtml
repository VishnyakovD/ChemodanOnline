@using System.Web.Optimization
@model Shop.Models.MenuModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@Page.Title</title>
    @RenderSection("head", required: false)
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link href="~/Content/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/styles.css" rel="stylesheet" />

    <link href="~/Content/css/swiper.min.css" rel="stylesheet" />
    <link href="~/Content/css/main.min.css" rel="stylesheet" />
</head>
<body>
    @{ Html.RenderPartial("MenuPartial", Model); }

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @RenderBody()
            </div>
        </div>
    </div>

    @{Html.RenderPartial("footerPartial");}

    <div id="DialogDataEdit">
        <div id="DialogDataEditBody">
        </div>
    </div>

    <div style="display: none" id="ServerMessage"></div>
    <div class="message js-message" style="display: none"></div>

    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    @*<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>*@
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.cookie-1.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/scripts.js"></script>
    <script src="~/Scripts/event-handlers.js"></script>

    <!--[if lt IE 9]>
    <script src="~/Scripts/html5shiv.js"></script>
    <script src="~/Scripts/respond.min.js"></script>
    <![endif]-->

    <script src="~/Scripts/swiper.jquery.min.js"></script>
    <script src="~/Scripts/ts/swiper.js"></script>
    <script src="~/Scripts/ts/menu.js"></script>
    <script src="~/Scripts/ts/main-page.js"></script>
    <script src="~/Scripts/ts/filters.js"></script>
    <script src="~/Scripts/ts/cart.js"></script>
    <script src="~/Scripts/ts/controls.js"></script>
    <script src="~/Scripts/ts/message.js"></script>
    <script src="~/Scripts/ts/pay-one-click.js"></script>
    <script src="~/Scripts/ts/card.js"></script>
</body>
</html>
