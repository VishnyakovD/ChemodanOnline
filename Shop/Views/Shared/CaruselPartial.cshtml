@model Shop.Models.MenuModel

@if (Model != null && Model.caruselItems != null && Model.caruselItems.Any())
{
    <div class="carousel-holder">
  
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" style="height: 500px;">
            <ol class="carousel-indicators">
            
                @for (int i = 0; i < Model.caruselItems.Count; i++)
                {
                    if (i == 0)
                    {
                        <li data-target="#carousel-example-generic" data-slide-to="@i" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carousel-example-generic" data-slide-to="@i"></li>
                    }
                }

            </ol>

            <div class="carousel-inner">
                
                @foreach (var item in Model.caruselItems)
                {
                    if (item == Model.caruselItems[0])
                    {
                        <div class="item active">
                            <a href="@item.pathLink" target="_blank">
                             <img class="slide-image" src="@item.imgPath" alt="@item.title">
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="item">
                            <a href="@item.pathLink" target="_blank">
                                <img class="slide-image" src="@item.imgPath" alt="@item.title">
                            </a>
                        </div>
                    }
                }

            </div>
            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
 
    </div>
}