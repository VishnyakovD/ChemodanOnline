<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Shop.db"
                   namespace="Shop.db.Entities">

  <class name="Order" table="[Order]" lazy="false">
    <id name="Id" >
      <generator class="identity" />
    </id>
    <property name="From" column="[From]"/>
    <property name="To" column="[To]"/>

   <property name="OrderNumber" generated="insert" insert="false" update="false"/>
    
    <property name="OrderPrefix" />
    <property name="OrderComment" />
    <property name="IsPaid" />
    <property name="CreateDate" />
    
    <many-to-one name="Client" lazy="false" class="Client" column="[Client]"  cascade="save-update" />
    <many-to-one name="Pdf" lazy="false" class="OrderInfoFile" />
    <many-to-one name="DeliveryType" lazy="false" class="DeliveryType" />
    <many-to-one name="PaymentType" lazy="false" class="PaymentType" />
    <many-to-one name="OrderState" lazy="false" class="OrderState" />
    
    <bag name="Products" inverse="true" lazy="false" >
      <key column="OrderId"/>
      <one-to-many class="OrderProduct"/>
    </bag>
  </class>

<database-object>
    <create>
      ALTER TABLE [Order] DROP COLUMN OrderNumber
      drop SEQUENCE LastOrderNumber
      create SEQUENCE LastOrderNumber
      START WITH 1500
      INCREMENT BY 1 ;
      GO
      ALTER TABLE [Order] ADD OrderNumber INT NOT NULL DEFAULT (NEXT VALUE FOR LastOrderNumber)
    </create>
  <drop></drop>
  </database-object>
<!-- -->
</hibernate-mapping>
