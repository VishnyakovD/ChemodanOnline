<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Shop.db"
                   namespace="Shop.db.Entities">

  <class name="Order">
    <id name="Id" >
      <generator class="identity" />
    </id>
    <property name="From" />
    <property name="To" />
    
    <many-to-one name="Client" lazy="false" class="Client" />
    <many-to-one name="Pdf" lazy="false" class="OrderInfoFile" />
    <many-to-one name="DeliveryType" lazy="false" class="DeliveryType" />
    <many-to-one name="PaymentType" lazy="false" class="PaymentType" />
    <many-to-one name="OrderState" lazy="false" class="OrderState" />
    
    <bag name="Products" inverse="true" lazy="false" cascade="save-update">
      <key column="ProductId"/>
      <one-to-many class="OrderProduct"/>
    </bag>
  </class>

</hibernate-mapping>
